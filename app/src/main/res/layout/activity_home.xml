<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Home"

    android:paddingTop="12dp"
    android:background="@color/color0B257C">



    <LinearLayout
        android:id="@+id/llCuentaBancaria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="52dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola, "
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomas"
            android:textSize="24dp"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textColor="@color/colorDF8744"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/ic_persona_bcp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHeaderAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="52dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llCuentaBancaria">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis productos"
            android:textSize="24dp"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <!--<ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_edit"/>
-->
        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_setting"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginVertical="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llHeaderAccount">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_block_account_container">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logo_bcp_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#222E42"
                android:gravity="center_vertical"
                android:ellipsize="end"
                tools:text="CUENTAS DE AHORRO"/>
            <TextView
                android:id="@+id/tvSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#222E42"
                android:gravity="center_vertical"
                tools:text="S/10,000"/>

            <TextView
                android:id="@+id/tvNroCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#222E42"
                tools:text="*********1212"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_block_account_container_orange">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Sin cuentas adicionales"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="48dp"
        android:paddingTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llCards">

        <ImageView
            android:id="@+id/btnTransferir"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/bg_circular_orange"
            android:padding="8dp"
            android:src="@drawable/ic_transferir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTransferir"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Transferir dinero"
            app:layout_constraintEnd_toEndOf="@+id/btnTransferir"
            app:layout_constraintStart_toStartOf="@+id/btnTransferir"
            app:layout_constraintTop_toBottomOf="@+id/btnTransferir" />

        <ImageView
            android:id="@+id/btnPagoServicios"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/bg_circular_orange"
            android:padding="8dp"
            android:src="@drawable/ic_pagos"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPagoServicios"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Pagar servicios"
            app:layout_constraintEnd_toEndOf="@+id/btnPagoServicios"
            app:layout_constraintStart_toStartOf="@+id/btnPagoServicios"
            app:layout_constraintTop_toBottomOf="@+id/btnPagoServicios" />

        <ImageView
            android:id="@+id/btnYapear"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="52dp"
            android:background="@drawable/bg_circular_orange"
            android:padding="8dp"
            android:src="@drawable/ic_yapear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvYapear"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Yapear a celular"
            app:layout_constraintEnd_toEndOf="@+id/btnYapear"
            app:layout_constraintStart_toStartOf="@+id/btnYapear"
            app:layout_constraintTop_toBottomOf="@+id/btnYapear" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplicación desarrollada con fines académicos"
            android:textSize="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>